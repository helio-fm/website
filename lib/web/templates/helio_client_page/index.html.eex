                <% end %>
              </ul>
          </div>
          <div class="col s12 m4">
            <p>DEVELOPMENT BUILDS</p>
              <ul>
                <%= for app <- Enum.reverse(@latest_releases), app.branch != "stable" do %>
                <li>
                  <a href="<%= app.link %>"<%= if app.file_info != "" do %> title="<%= app.file_info %>"<% end %>>
                    <span class="l1"><%= app.platform_type %></span><span class="l2 div"><%= app.build_type %></span><%= if app.architecture != "all" do %><span class="l3 div"><%= app.architecture %></span><% end %>
